@model MovieCineplex.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
    <img src="@Html.DisplayFor(model => model.ImageUrl)" height="180" width="340" />
    <dl class="dl-horizontal">
        <dt>
        <dt>
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            NOW AVAILABLE IN
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th> </th>
                    <th> </th>
                </tr>
                @foreach (var item in Model.CineplexMovie)
                {
                    <tr>
                        <td>
                            @*@Html.DisplayFor(m => item.Cineplex.CineplexId)*@
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(m => item.Cineplex.ImageUrl)" height="100" width="140" />
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Cineplex.Location)
                        </td>
                        <td>
                            <b>@Html.DisplayFor(m => item.Cineplex.ShortDescription)</b>
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Cineplex.LongDescription)
                        </td>
                        <td>
                            <a asp-controller="Sessiontimes" asp-action="Index" asp-route-movie_id="@item.MovieId" asp-route-cineplex_id="@item.CineplexId">BookingNow</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

