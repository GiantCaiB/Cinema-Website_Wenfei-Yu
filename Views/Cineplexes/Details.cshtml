@model MovieCineplex.Models.Cineplex

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Location)</h2>
<img src="@Html.DisplayFor(model => model.ImageUrl)" height="180" width="340" />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt>
            ALL MOVIES AT @Html.DisplayFor(model => model.Location)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    @*<th>ID</th>*@
                    <th> </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.CineplexMovie)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(m => item.Movie.MovieId)
                        </td>*@
                        <td>
                            <img src="@Html.DisplayFor(m => item.Movie.ImageUrl)" height="100" width="140" />
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Movie.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Movie.ShortDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Movie.LongDescription)
                        </td>
                        
                        <td>
                            <a  asp-controller="Sessiontimes" asp-action="Index" asp-route-movie_id="@item.MovieId" asp-route-cineplex_id="@item.CineplexId">BookingNow</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

