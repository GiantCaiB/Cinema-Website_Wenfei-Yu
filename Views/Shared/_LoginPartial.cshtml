@using Microsoft.AspNetCore.Identity
@using MovieCineplex.Models


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Reservations" asp-action="Index"><img src="~/images/shoppingcart.png" height="35" width="35"></a>
            </li>
            <li>
                <a asp-area="" asp-controller="Reservations" asp-action="UserCenter" title="Manage"><span style="font-size:8pt">@UserManager.GetUserName(User)</span></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Reservations" asp-action="Index"><img src="~/images/shoppingcart.png" height="35" width="35"></a></li>
        <!--
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        -->
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
